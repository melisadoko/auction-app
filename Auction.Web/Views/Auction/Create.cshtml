@model AuctionViewModel

@{
    ViewData["Title"] = "Create Auction";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="col-md-8">
        <h1 class="text-center mb-4">Create Auction</h1>
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger text-center"></div>

            <div class="row">
                <!-- Left Column -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control form-control-sm" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control form-control-sm"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartingPrice" class="control-label"></label>
                        <input asp-for="StartingPrice" class="form-control form-control-sm" type="number" step="0.01" name="StartingPrice" />
                        <span asp-validation-for="StartingPrice" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control form-control-sm" type="date" name="EndDate" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Submit button -->
            <div class="form-group d-flex justify-content-end mt-3">
                <input type="submit" value="Create Auction" class="btn btn-outline-success" style="padding: 0.375rem 1.5rem;" />
            </div>
        </form>
    </div>
</div>
